generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ─── NextAuth Required Models ─────────────────────────────────────

enum Role {
  USER
  ADMIN
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime? @map("email_verified")
  image         String?
  role          Role      @default(USER)
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  accounts Account[]
  sessions Session[]
  profiles Profile[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ─── App Models ───────────────────────────────────────────────────

enum ProfileType {
  ARTIST
  VENUE
  CREATOR
  BUSINESS
  INFLUENCER
  PERSONAL
  RESTAURANT
  ORGANIZATION
}

enum BlockType {
  LINK_BUTTON
  SOCIAL_ROW
  EMBED
  TEXT_ANNOUNCEMENT
  MEDIA_GALLERY
  EVENTS
  PLACE_INFO
  TICKET_CTA
  PRODUCT_CARDS
  INSTAGRAM_EMBED
  FAQ
  BUSINESS_HOURS
  RICH_TEXT
  TEAM_MEMBERS
}

model Category {
  id       String    @id @default(cuid())
  slug     String    @unique
  nameKo   String    @map("name_ko")
  icon     String?
  order    Int       @default(0)
  profiles Profile[]

  @@map("categories")
}

model Profile {
  id                        String      @id @default(cuid())
  userId                    String      @map("user_id")
  handle                    String      @unique
  displayName               String      @map("display_name")
  type                      ProfileType
  bio                       String?
  avatarUrl                 String?     @map("avatar_url")
  coverUrl                  String?     @map("cover_url")
  location                  String?

  // Category (for discovery)
  categoryId                String?     @map("category_id")

  // Customization
  themeId                   String      @default("radiant") @map("theme_id")
  fontBody                  String      @default("pretendard") @map("font_body")
  fontDisplay               String      @default("fraunces") @map("font_display")
  customAccentColor         String?     @map("custom_accent_color")
  buttonStyle               String      @default("gradient") @map("button_style")
  cardStyle                 String      @default("glass") @map("card_style")
  showSparkles              Boolean     @default(true) @map("show_sparkles")
  showVisitorCount          Boolean     @default(false) @map("show_visitor_count")
  profileLayout             String      @default("centered") @map("profile_layout")

  // Trappist connections
  connectedTrappistArtistId String?     @map("connected_trappist_artist_id")
  connectedTrappistPlaceId  String?     @map("connected_trappist_place_id")

  isPublished               Boolean     @default(false) @map("is_published")
  createdAt                 DateTime    @default(now()) @map("created_at")
  updatedAt                 DateTime    @updatedAt @map("updated_at")

  owner      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  category   Category?  @relation(fields: [categoryId], references: [id])
  blocks     Block[]
  events     Event[]
  pageViews  PageView[]
  linkClicks LinkClick[]

  @@index([type])
  @@index([categoryId])
  @@index([isPublished])
  @@map("profiles")
}

model Block {
  id         String    @id @default(cuid())
  profileId  String    @map("profile_id")
  type       BlockType
  title      String?
  configJson Json      @map("config_json")
  sortOrder  Int       @default(0) @map("sort_order")
  isEnabled  Boolean   @default(true) @map("is_enabled")
  createdAt  DateTime  @default(now()) @map("created_at")
  updatedAt  DateTime  @updatedAt @map("updated_at")

  profile Profile @relation(fields: [profileId], references: [id], onDelete: Cascade)

  @@index([profileId, sortOrder])
  @@map("blocks")
}

model Event {
  id        String   @id @default(cuid())
  profileId String   @map("profile_id")
  title     String
  startsAt  DateTime @map("starts_at")
  venueName String   @map("venue_name")
  ticketUrl String?  @map("ticket_url")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  profile Profile @relation(fields: [profileId], references: [id], onDelete: Cascade)

  @@index([profileId])
  @@index([startsAt])
  @@map("events")
}

// ─── Analytics Models ────────────────────────────────────────────

model PageView {
  id          String   @id @default(cuid())
  profileId   String   @map("profile_id")
  visitorHash String   @map("visitor_hash")
  sessionId   String?  @map("session_id")
  referrer    String?
  userAgent   String?  @map("user_agent")
  deviceType  String?  @map("device_type")
  browserName String?  @map("browser_name")
  osName      String?  @map("os_name")
  country     String?
  region      String?
  city        String?
  utmSource   String?  @map("utm_source")
  utmMedium   String?  @map("utm_medium")
  utmCampaign String?  @map("utm_campaign")
  utmContent  String?  @map("utm_content")
  utmTerm     String?  @map("utm_term")
  createdAt   DateTime @default(now()) @map("created_at")

  profile Profile @relation(fields: [profileId], references: [id], onDelete: Cascade)

  @@index([profileId, createdAt])
  @@index([profileId, visitorHash, createdAt])
  @@index([createdAt])
  @@map("page_views")
}

model LinkClick {
  id          String   @id @default(cuid())
  profileId   String   @map("profile_id")
  blockId     String   @map("block_id")
  visitorHash String   @map("visitor_hash")
  blockType   String   @map("block_type")
  targetUrl   String?  @map("target_url")
  label       String?
  deviceType  String?  @map("device_type")
  country     String?
  createdAt   DateTime @default(now()) @map("created_at")

  profile Profile @relation(fields: [profileId], references: [id], onDelete: Cascade)

  @@index([profileId, createdAt])
  @@index([blockId, createdAt])
  @@map("link_clicks")
}
